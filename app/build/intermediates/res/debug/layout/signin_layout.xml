<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b000"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_book" />
    <TextView
        android:id="@+id/hint_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Enter your mobile number to sign in"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:background="@drawable/button_brown"
        android:text="Sign In"/>
        <!-- style="@style/button_text" -->

    <EditText
        android:id="@+id/editText1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:hint="Enter Registered Mobile number"
        android:inputType="number"
        android:textColor="#444444"
        android:singleLine="true">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:textColor="#EB4C4C"
        android:visibility="gone"
        android:textStyle="italic"
        android:layout_marginBottom="23dp"
        android:text="No Internet Connection"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hint_signin"
        android:layout_alignRight="@+id/imageView1" />

</RelativeLayout>
